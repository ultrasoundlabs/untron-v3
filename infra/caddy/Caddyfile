:8080 {
  # GET-only OpenAPI for Swagger UI
  handle /openapi.json {
    reverse_proxy openapi_sidecar:5000
  }

  # Swagger UI
  handle /docs* {
    reverse_proxy swagger:8080
  }

  # Everything else goes to PostgREST (including "/" which serves the raw OpenAPI)
  handle {
    reverse_proxy postgrest:3000
  }
}
