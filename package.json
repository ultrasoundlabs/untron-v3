{
  "name": "untron-v3",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "clean": "pnpm --filter @untron/v3-contracts clean",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint:sol": "pnpm --filter @untron/v3-contracts lint:sol",
    "fmt:sol": "pnpm --filter @untron/v3-contracts fmt:sol",
    "fmt:ts": "prettier -c '**/*.{ts,tsx,js,jsx}'",
    "format:sol": "pnpm --filter @untron/v3-contracts format:sol",
    "format:ts": "prettier --write '**/*.{ts,tsx,js,jsx,mjs}'",
    "format": "run-s format:*",
    "test:ci": "pnpm --filter @untron/v3-contracts test:ci",
    "build:prod": "pnpm --filter @untron/v3-contracts build:prod",
    "codegen": "pnpm --filter @untron/v3-contracts codegen",
    "typecheck": "pnpm --filter @untron/v3-contracts typecheck",
    "verify": "pnpm --filter @untron/v3-contracts verify",
    "abi:gen": "pnpm --filter @untron/v3-contracts codegen",
    "contracts:export": "pnpm --filter @untron/v3-contracts export",
    "prepare": "husky",
    "research": "pnpm --filter @untron/research exec tsx src/run.ts",
    "contracts:build": "forge build --root packages/contracts",
    "contracts:bind:rust": "forge bind --root packages/contracts --crate-name contracts_bindings --bindings-path crates/contracts-bindings --overwrite",
    "indexer:build": "pnpm contracts:bind:rust && cargo build -p indexer",
    "openapi:build": "node infra/openapi-sidecar/build.mjs",
    "ai": "repomix -o /dev/null --copy --quiet",
    "ai:loud": "repomix -o /dev/null --copy"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.7",
    "@wagmi/cli": "^2.5.1",
    "esbuild": "^0.27.2",
    "hono": "^4.11.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "repomix": "^1.11.0",
    "rimraf": "^5",
    "swagger2openapi": "^7.0.8"
  },
  "lint-staged": {
    "packages/contracts/src/**/*.sol": [
      "forge fmt --check"
    ],
    "packages/contracts/test/**/*.sol": [
      "forge fmt --check"
    ],
    "packages/contracts/script/**/*.sol": [
      "forge fmt --check"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "prettier -c"
    ]
  },
  "dependencies": {
    "@types/node": "^22.19.0"
  }
}
