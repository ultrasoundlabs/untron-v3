{
  "name": "untron-v3",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "clean": "rimraf packages/contracts/dist packages/contracts/abi/generated.ts",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    
    "fmt:sol": "forge fmt --check --root packages/contracts -r packages/contracts/src packages/contracts/test packages/contracts/script",
    "fmt:ts": "prettier -c '**/*.{ts,tsx,js,jsx}'",
    "format:sol": "forge fmt --root packages/contracts -r packages/contracts/src packages/contracts/test packages/contracts/script",
    "format:ts": "prettier --write '**/*.{ts,tsx,js,jsx}'",
    "format": "run-s format:*",

    "test:ci": "cd packages/contracts && FOUNDRY_PROFILE=ci forge build && FOUNDRY_PROFILE=ci forge test --gas-report",
    "build:prod": "cd packages/contracts && FOUNDRY_PROFILE=production forge build",
    "codegen": "pnpm -w wagmi generate",
    "typecheck": "pnpm --filter @untron/v3-contracts exec tsc -p tsconfig.build.json",

    "verify": "run-s fmt:* test:ci build:prod codegen typecheck",

    "abi:gen": "pnpm -w wagmi generate",
    "contracts:export": "pnpm --filter @untron/v3-contracts export",
    "prepare": "husky"
  },
  "devDependencies": {
    "@wagmi/cli": "^2.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^5",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "packages/contracts/src/**/*.sol": [
      "forge fmt --check"
    ],
    "packages/contracts/test/**/*.sol": [
      "forge fmt --check"
    ],
    "packages/contracts/script/**/*.sol": [
      "forge fmt --check"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "prettier -c"
    ]
  }
}
